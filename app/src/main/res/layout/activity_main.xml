<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/need_help_card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp"
        android:backgroundTint="#00A1FA"
        >

        <LinearLayout
            android:id="@+id/need_help_l"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/need_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEED HELP"
                android:textSize="20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/get_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="Get Help" />

    <TextView
        android:id="@+id/print_Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOCATION : "
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/show_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Location"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/show_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show My 5 Numbers"
        />

    <Button
        android:id="@+id/show_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Requsts"
        />

    <Button
        android:id="@+id/show_emergency_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Emergency Helpline Numbers"
        />



</LinearLayout>