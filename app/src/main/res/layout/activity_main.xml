<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@color/purple_500"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/need_help_card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp"
        android:backgroundTint="#F80303"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:id="@+id/need_help_l"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/need_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEED HELP"
                android:textStyle="italic|bold"
                android:textSize="25dp"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/get_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="Get Help" />

    <TextView
        android:id="@+id/print_Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY LOCATION : "
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/show_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Location"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >



    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/my_contact"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="My Contact"
                    android:background="@color/purple_500"
                    android:padding="10dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/all_request"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="All Request"
                    android:background="@color/purple_500"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/emergency_number"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Emergecy Number"
                    android:background="@color/purple_500"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    />

                <TextView
                    android:id="@+id/my_profile"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:background="@color/purple_500"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>





</LinearLayout>